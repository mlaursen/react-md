{
  "presets": ["es2015", "react", "stage-0"],
  "plugins": [
    "system-import-transformer",
    "syntax-async-functions",
    "transform-regenerator",
    "transform-decorators-legacy",
    ["inline-import", {
      "extensions": [".md"]
    }]
  ],
  "env": {
    "scripts": {
      "presets": [
        ["env", {
          "targets": {
            "node": "current"
          }
        }]
      ],
      "plugins": [
        ["module-resolver", {
          "alias": {
            "imgs": "./src/imgs",
            "constants": "./src/constants",
            "server": "./src/server",
            "utils": "./src/utils"
          }
        }]
      ]
    }
  }
}
